@Scripts.Render("~/bundles/jquery")

<!DOCTYPE html>
<script src="~/Scripts/Controllers/HomePageController.js"></script>
<html>
<head>
    <title>RazorApp</title>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <h2>Comparison Options</h2>
            
            @using (Html.BeginForm("CollideTest", "Home"))
            {
                @Html.TextBox("rectangleOne")
                @Html.TextBox("rectangleTwo")
                <input type="submit" value="Do they collide?" />
            }

            @using (Html.BeginForm("ContainTest", "Home"))
            {
                @Html.TextBox("rectangleOne")
                @Html.TextBox("rectangleTwo")
                <input type="submit" value="Do they contain?" />
            }

            @using (Html.BeginForm("AdjacentTest", "Home"))
            {
                @Html.TextBox("rectangleOne")
                @Html.TextBox("rectangleTwo")
                <input type="submit" value="Are they adjacent?" />
            }
        </div>
    </div>
    <div>
        <SECTION style="border-style: solid; border-width: 2px; width: 1024px;">
            <CANVAS HEIGHT="740" WIDTH="1024" ID="canvas">

                Your browser is not supporting HTML5 Canvas .Upgrade Browser to view this program or check with Chrome or in Firefox.
            </CANVAS>

            <button style="border-style: solid; border-width: 2px; width: 100px;" onClick="DrawRectangleOne()" >Draw Rectangle</button>
            <button style="border-style: solid; border-width: 2px; width: 100px;" onClick="SaveRectangle()">Save Rectangle</button>
        </SECTION>
    </div>
</body>
</html>


